<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskInfoInput">

    <TextView
        android:id="@+id/welcomeTextViewInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/atma_bold"
        android:text="@string/welcomeMessage"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="82dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/logoContentDescr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/workingbeelogo" />

    <Spinner
        android:id="@+id/spinnerTaskList"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#AFA9A9"
        android:contentDescription="@string/chooseTask"
        app:layout_constraintEnd_toEndOf="@+id/chooseTaskTextView"
        app:layout_constraintStart_toStartOf="@+id/chooseTaskTextView"
        app:layout_constraintTop_toBottomOf="@+id/chooseTaskTextView"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/chooseTaskTextView"
        android:layout_width="112dp"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/atma_bold"
        android:text="@string/chooseTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextViewInput" />

    <TimePicker
        android:id="@+id/timepicker1"
        android:layout_width="148dp"
        android:layout_height="91dp"
        android:layout_marginTop="4dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timePicker2"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTimeTextView"
        app:layout_constraintVertical_bias="0.068" />

    <TimePicker
        android:id="@+id/timePicker2"
        android:layout_width="177dp"
        android:layout_height="91dp"
        android:layout_marginEnd="16dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="@+id/timepicker1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timepicker1"
        app:layout_constraintVertical_bias="0.33" />

    <TextView
        android:id="@+id/startTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/startTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTaskList" />

    <TextView
        android:id="@+id/finishTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:text="@string/finishTime"
        app:layout_constraintStart_toEndOf="@+id/startTimeTextView"
        app:layout_constraintTop_toTopOf="@+id/startTimeTextView" />

    <Button
        android:id="@+id/saveBtnTaskInput"
        android:layout_width="93dp"
        android:layout_height="50dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="147dp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@+id/timePicker2"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="@+id/timepicker1"
        app:layout_constraintTop_toBottomOf="@+id/timePicker2" />

    <Button
        android:id="@+id/exitBtnTaskInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveBtnTaskInput" />

    <Button
        android:id="@+id/backBtnTaskInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="28dp"
        android:text="@string/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exitBtnTaskInput"
        app:layout_constraintTop_toBottomOf="@+id/saveBtnTaskInput" />

</androidx.constraintlayout.widget.ConstraintLayout>